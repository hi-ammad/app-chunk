<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--[if (gte mso 9)|(IE)]>
      <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet" />
    <![endif]-->
    <style>
      body,
      table,
      td,
      a,
      p,
      span,
      button {
        font-family: 'Poppins', Arial, sans-serif;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        margin: 0;
        padding: 0;
      }
      table {
        border-spacing: 0;
        width: 100%;
      }
      img {
        border: 0;
        display: block;
      }
      @media only screen and (max-width: 600px) {
        #container {
          width: 100% !important;
        }
        .footer-box {
          padding: 20px !important;
        }
      }
    </style>
  </head>
  <body style="margin: 20px 0 0; padding: 0; width: 100%">
    <table
      align="center"
      role="presentation"
      cellpadding="0"
      cellspacing="0"
      width="100%"
      style="max-width: 500px; margin: 0 auto; padding: 20px; background-color: #fafafa; border-radius: 20px"
    >
      <tr>
        <td align="center">
          <table
            id="container"
            role="presentation"
            cellpadding="0"
            cellspacing="0"
            width="500"
            style="background-color: #fafafa; border-radius: 8px"
          >
            <tr>
              <td>
                <!-- Header -->
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
                  <tr>
                    <td align="center">
                      <img
                        src="https://...-app-bucket.s3.us-east-1.amazonaws.com/uploads/Image20250310191044.png"
                        alt="...-logo"
                        width="100"
                      />
                    </td>
                  </tr>
                </table>

                <!-- Admin Alert Content -->
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="margin-top: 32px">
                  <tr>
                    <td>
                      <p style="font-size: 16px; color: #ce2029; font-weight: 600; text-align: center">
                        Booking Declined - Admin Notification
                      </p>
                      <p style="font-size: 14px; color: #6f6b6b; margin-top: 8px; text-align: center">
                        Host <strong>{{ firstName }}</strong> has declined the booking for:
                      </p>
                      <p
                        style="
                          font-size: 14px;
                          color: #6f6b6b;
                          margin-top: 8px;
                          text-align: center;
                          background: #f0f0f0;
                          padding: 12px;
                          border-radius: 8px;
                        "
                      >
                        <strong>Listing:</strong> {{ bookingTitle }}<br />
                        <strong>Guest:</strong> {{ firstName }} ({{ email }})<br />
                        <strong>Booking ID:</strong> #{{ id }}
                      </p>
                    </td>
                  </tr>
                </table>

                <!-- Action Required (if any) -->
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="margin-top: 24px">
                  <tr>
                    <td>
                      <p style="font-size: 14px; color: #6f6b6b; text-align: center">
                      <a
                        href="https://....com/dashboard/booking/viewbooking/{{ id }}"
                        style="color: #ce2029; text-decoration: none; font-weight: 500"
                      >
                        View booking details in Admin Panel â†’
                      </a>
                      </p>
                    </td>
                  </tr>
                </table>

                <!-- Regards -->
                <table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="margin-top: 32px">
                  <tr>
                    <td>
                      <p style="font-size: 14px; color: #6f6b6b">
                      </p>
                    </td>
                  </tr>
                </table>

                <!-- Footer -->
                <table
                  role="presentation"
                  width="100%"
                  cellpadding="0"
                  cellspacing="0"
                  class="footer-box"
                  style="background-color: #ce2029; border-radius: 16px; margin-top: 32px; padding: 32px"
                >
                  <tr>
                    <td align="center">
                      <p style="font-size: 12px; color: #ffffff; margin-top: 14px">
                      </p>
                      <a
                        href="https://....com/"
                        style="
                          font-size: 12px;
                          color: #ffffff;
                          margin-top: 8px;
                          display: inline-block;
                          text-decoration: none;
                        "
                      >
                        Admin Portal
                      </a>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
